@model LoginViewModel

@{
    Layout = "_LoginLayout";
    ViewBag.Title = "User Login";
}

<br />
<br />
<h4 class="text-center"><img src="https://www.tatweerit.com/assets/images/logo.png" /></h4>



<div class="row">
    <div class="col-6 offset-3 justify-content-center">
        <form asp-action="Login" method="post">
            
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="form-label mt-4" for="InputEmail1">Email address</label>
                <input asp-for="Email" id="InputEmail1" class="form-control" aria-describedby="emailHelp" placeholder="Enter email" type="email" />

                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" for="InputPassword1" class="form-label mt-4"></label>
                <input asp-for="Password" class="form-control" id="InputPassword1" type="password" class="form-control" placeholder="Password" autocomplete="off" />

                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox mt-4">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary  form-control mt-4">Login</button>

            <div class="mt-4">
                <a asp-controller="Administration" asp-action="ForgotPassword">Forgot Password?</a>
            </div>
        </form>
    </div>
</div>

