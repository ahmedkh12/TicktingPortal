@model CreateRoleViewModel

@{
    Layout = "_DashboardLayout";
    ViewBag.Title = "Create New Role";
}

<form asp-action="CreateRole" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <div class="col-6 offset-3 justify-content-center">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" placeholder="Name">
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Description" class=" col-form-label"></label>
            <div class="col-sm-10">
                <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary mt-2" style="width:auto">
                    Create Role
                </button>
                <a asp-action="ListRoles" asp-controller="Administration" class="btn btn-danger mt-2">Cancle</a>
            </div>

          
        </div>
    </div>


</form>


