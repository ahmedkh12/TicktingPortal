@using Portal.Models.Ticket
@model CreateTicketViewModel

@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Create Ticket";
}


<h6>Create New Ticket</h6>


<div class="row">
    <div class="col-6  ">
        <form asp-action="Create" asp-controller="Ticket" role="form">

            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" class="form-control" aria-describedby="First Name" placeholder="Problem Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" class="form-control" aria-describedby="Last Name" placeholder="Ticket Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AuthorEmail"></label>
                <input asp-for="AuthorEmail" class="form-control" class="form-control" aria-describedby="Mobile" placeholder="Enter Email" type="email" />
                <span asp-validation-for="AuthorEmail" class="text-danger"></span>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AuthorMobile" class="form-label mt-4" ></label>
                <input asp-for="AuthorMobile" id="InputEmail1" class="form-control" aria-describedby="emailHelp" placeholder="Enter Mobile" type="text" />
                <span asp-validation-for="AuthorMobile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AuthorCompany" class="form-label mt-4"></label>
                <input asp-for="AuthorCompany" class="form-control" type="text" class="form-control" placeholder="Company Name" autocomplete="off" />
                <span asp-validation-for="AuthorCompany" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary   mt-2" />
                <a asp-action="Index" asp-controller="Ticket" class="btn btn-danger   mt-2">Cancle</a>
            </div>

        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
